@using X.PagedList.Mvc.Common;
@model X.PagedList.IPagedList<Product>
@{
    ViewData["Title"] = "Home Page";
}
<br /><br />
<div class="row ">
    @foreach (var product in Model)
    {
        <div class="col-lg-4 col-sm-12 col-md-6 col-xl-4">
            <div class="card mb-3 offset-1">
                <div class="card-header ">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px; color:steelblue">
                            @product.Name
                        </label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="card image" style="height:300px" class="img-fluid card-img-top" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313"><b>Price : @product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success fa-pull-right btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    <strong style="font-size:large">  @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c), PagedListRenderOptionsBase.PageNumbersOnly) </strong>
</div>

@section scripts{
    <script src="~/lib/AlertifyJS/alertify.min.js"></script>
    <script type="text/javascript">

    $(function ()
    {
    var save ='@TempData["Save"]'
    if(save !='')
    {
        alertify.success(save);
    }
    })
      $(function ()
    {
        var save ='@TempData["Update"]'
    if(save !='')
    {
        alertify.message(save);    }
        })

        $(function ()
    {
        var save ='@TempData["Delete"]'
    if(save !='')
    {
        alertify.error(save);
    }
        })


    </script>

}