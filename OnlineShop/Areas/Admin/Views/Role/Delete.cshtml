
@{
    ViewData["Title"] = "Delete";
}
<h2 class="text-dark"><strong>Delete Role</strong></h2>

<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <h3 class="text-danger font-weight-bold">Do you want to delete ?</h3>
        <div class="form-group row">
            <div class=" col-lg-2 ">
                <strong><label>Role Name</label></strong>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id"/>
            <div class="col-lg-5 ">
                <input id="name" name="name" readonly="readonly" value="@ViewBag.name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Delete" style="border-radius:10px" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success" style="border-radius:10px">Back To List</a>
        </div>
    </div>
</form>

@section Scripts
    {
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                }, messages: {
                    UserName: "Enter Your Email "
                    ,
                    PasswordHash: "Enter Your Password "
                }

            });
        });

    </script>
}